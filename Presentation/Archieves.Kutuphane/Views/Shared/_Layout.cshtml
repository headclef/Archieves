@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <title>Kütüphane Uygulaması</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <meta name="keywords" content="PC, android ve akıllı cihazlarda çalışabilecek bir kütüphane template 'i." />

    <link href="~/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <link href="~/css/single.css" rel="stylesheet" type="text/css" />
    <link href="~/css/style.css" rel="stylesheet" type="text/css" />
    <link href="~/css/contact.css" rel='stylesheet' type='text/css' />
    <link href="~/css/fontawesome-all.css" rel="stylesheet" type="text/css" />
    <link href="~/css/jquery.desoslide.css" rel="stylesheet" type="text/css" />
    <link href="//fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800"
          rel="stylesheet" />
</head>

<body>
    <!--Header-->
    <header>
        <div class="top-bar_sub_w3layouts container-fluid">
            <div class="row">
                <div class="col-md-4 logo text-left">
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                        <img src="~/images/archievesLogo.png" width="70px" style="margin-bottom: 12.5px;"/>
                        <h1 style="display:inline-block;"><b>KÜTÜPHANE</b></h1>
                    </a>
                </div>
                <!--/ login, logout, register -->
                @if (User.Identity.IsAuthenticated)
                {
                    @await Html.PartialAsync("PartialViewLoggedIn")
                }
                else
                {
                    @await Html.PartialAsync("PartialViewLoggedOut")
                }
                <!--// login, logout, register -->
                <div class="col-md-4 log-icons text-right">
                    <ul class="social_list1 mt-3">
                        <li>
                            <a href="https://www.facebook.com/headcleFT">
                                <img src="~/images/facebook.svg" height="15px" />
                            </a>
                        </li>
                        <li>
                            <a href="https://twitter.com/headclef">
                                <img src="~/images/twitter.svg" height="15px" />
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <img src="~/images/basketball.svg" height="15px" />
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="header_top" id="home">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <button class="navbar-toggler navbar-toggler-right mx-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                Anasayfa
                                <span class="sr-only">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Book" asp-action="Index">Kitaplık</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="About" asp-action="Index">Hakkımızda</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Contact" asp-action="Index">İletişim</a>
                        </li>

                    </ul>
                    <form action="#" method="post" class="form-inline my-2 my-lg-0 header-search">
                        <input class="form-control mr-sm-2" type="search" placeholder="Kitap Ara..." name="Search" required="">
                        <button class="btn btn1 my-2 my-sm-0" type="submit">
                            <img src="~/images/glass.svg" height="15px" />
                        </button>
                    </form>
                </div>

            </nav>
        </div>
    </header>
    <!--//header-->
    <!--/banner-->
    <div class="banner-inner">
        <img src="~/images/banner.jpg" width="100%" />
    </div>
    <!--//banner-->
    <!--/main-->
    @RenderBody()
    <!--//main-->
    <!--/footer-->
    <footer>
        <div class="container">
            <div class="footer-cpy text-center">
                <div class="footer-social">
                    <div class="copyrighttop">
                        <ul>
                            <li class="mx-3">
                                <a class="facebook" href="https://www.facebook.com/headcleFT">
                                    <img alt="Facebook" src="https://img.shields.io/badge/-Facebook-0E0F10?style=flat-square&logo=facebook&logoColor=white" height="30">
                                </a>
                            </li>
                            <li>
                                <a class="facebook" href="https://twitter.com/headclef">
                                    <img alt="Twitter" src="https://img.shields.io/badge/-Twitter-0E0F10?style=flat-square&logo=twitter&logoColor=white" height="30">
                                </a>
                            </li>
                            <li class="mx-3">
                                <a class="facebook" href="https://www.instagram.com/headclef">
                                    <img alt="Instagram" src="https://img.shields.io/badge/-Instagram-0E0F10?style=flat-square&logo=instagram&logoColor=white" height="30">
                                </a>
                            </li>
                        </ul>
                        <ul>
                            <li class="mx-3">
                                <a class="facebook" href="https://github.com/headclef">
                                    <img alt="Github" src="https://img.shields.io/badge/-Github-0E0F10?style=flat-square&logo=github&logoColor=white" height="30">
                                </a>
                            </li>
                            <li class="mx-3">
                                <a class="facebook" href="#">
                                    <img alt="Youtube" src="https://img.shields.io/badge/-Youtube-0E0F10?style=flat-square&logo=youtube&logoColor=white" height="30">
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="w3layouts-agile-copyrightbottom">
                    <p>
                        © @DateTime.Now.Year Kütüphane Uygulaması. Bütün Hakları Saklıdır. | headclef tarafından tasarlandı ve düzenlendi.
                    </p>
                </div>
            </div>
        </div>
    </footer>
    <!--//footer-->
    <a href="#home" class="scroll" id="toTop" style="display: block;">
        <span id="toTopHover" style="opacity: 1;"> </span>
    </a>
    <!--/js-->
    <script>
        addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>
    <script>
        jQuery(document).ready(function ($) {
            $(".scroll").click(function (event) {
                event.preventDefault();
                $('html,body').animate({
                    scrollTop: $(this.hash).offset().top
                }, 900);
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            $().UItoTop({
                easingType: 'easeOutQuart'
            });

        });
    </script>
    <script src="~/js/move-top.js"></script>
    <script src="~/js/easing.js"></script>
    <script src="~/js/jquery-2.2.3.min.js"></script>
    <script src="~/js/bootstrap.js"></script>
    <!--//js-->
</body>

</html>