@using Archieves.Kutuphane.Models.Notification
@model List<NotificationViewModel>
@{
    int counter = 0;
}
<style>
    #hoverTitle h6 {
        color: black;
        transition: color 0.3s;
    }

    #hoverTitle:hover h6 {
        color: red;
    }

    #noHoverLink {
        color: gray;
    }

        #noHoverLink:hover {
            color: gray;
            text-decoration: none;
        }
</style>
<li class="nav-item dropdown">
    <a class="nav-link count-indicator dropdown-toggle" id="notificationDropdown" href="" data-toggle="dropdown">
        <img src="~/images/bell.svg" height="15px" />
        <span class="count-symbol bg-danger"></span>
    </a>
    <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" style="min-width:270px;" aria-labelledby="notificationDropdown">
        <h6 class="p-3 mb-0">Bildirimler</h6>
        @foreach (var item in Model)
        {
            counter++;
            <div class="dropdown-divider"></div>
            <a class="dropdown-item preview-item">
                <div>
                    <div>
                        <img src="@item.Icon" width="25px" />
                    </div>
                </div>
                <div class="preview-item-content d-flex align-items-start flex-column justify-content-center text-wrap" id="hoverTitle">
                    <h6 class="preview-subject font-weight-normal mb-1">@item.Type</h6>
                    <p class="text-gray ellipsis mb-0 text-justify">@item.Message</p>
                </div>
            </a>
            if (counter >= 3)
            {
                break;
            }
        }
        <div class="text-center">
            <a class="text-gray mb-1" asp-controller="Archieves" asp-action="IndexNotification" id="noHoverLink">Bütün bildirimleri gör.</a>
        </div>
    </div>
</li>