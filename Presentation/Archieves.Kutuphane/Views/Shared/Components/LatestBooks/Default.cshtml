@using Archieves.Kutuphane.Models.Book;
@using Archieves.Kutuphane.Services.Abstractions;
@inject IArchievesService archievesService;
@{
    var count = (await archievesService.GetBooksAsync()).Value.Count;
    string[] items = new string[4];
    try
    {
        items[0] = (await archievesService.GetBookAsync(count)).Value.Image;
        items[1] = (await archievesService.GetBookAsync(count - 1)).Value.Image;
        items[2] = (await archievesService.GetBookAsync(count - 2)).Value.Image;
        items[3] = (await archievesService.GetBookAsync(count - 3)).Value.Image;
    }
    catch (Exception e)
    {
        <p>e.Message</p>
    }
}
<div class="row mt-3">
    @{
        <div class="col-6 pr-1">
            <img src="@items[0]" class="mb-2 mw-100 w-100 rounded" alt="image">
            <img src="@items[1]" class="mw-100 w-100 rounded" alt="image">
        </div>
        <div class="col-6 pl-1">
            <img src="@items[2]" class="mb-2 mw-100 w-100 rounded" alt="image">
            <img src="@items[3]" class="mw-100 w-100 rounded" alt="image">
        </div>
    }
</div>
<div class="d-flex mt-5 align-items-top">
    <img src="~/admin/images/faces/face3.jpg" class="img-sm rounded-circle mr-3" alt="image">
    <div class="mb-0 flex-grow">
        <h5 class="mr-2 mb-2">Site Bünyesine Eklenmiş Olan En Son Kitapları Yukarıda Görebilirsiniz.</h5>
        <p class="mb-0 font-weight-light">Sıralama sırasında kitapların en sondan başa doğru 4 adet olmasına ve sıralamanın soldan sağa, yukarıdan asağıya olmasına dikkat edilmiştir.</p> <!-- Proje detayları -->
    </div>
    <div class="ml-auto">
        <i class="mdi mdi-heart-outline text-muted"></i>
    </div>
</div>