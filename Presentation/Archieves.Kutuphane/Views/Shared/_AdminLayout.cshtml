@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>_AdminLayout</title>
    <!-- /Stylesheets -->
    <link href="~/admin/css/style.css" rel="stylesheet" type="text/css" />
    <link href="~/admin/vendors/css/vendor.bundle.base.css" rel="stylesheet" type="text/css" />
    <link href="~/admin/vendors/mdi/css/materialdesignicons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/admin/images/favicon.ico" rel="shortcut icon" />
    <!-- //Stylesheets -->
</head>
<body>
    <div class="container-scroller">
        <!-- /Navbar -->
        <nav class="navbar default-layout-navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
            <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
                <a class="navbar-brand brand-logo" href="~/Home/Index.cshtml"><img src="~/admin/images/logo.svg" alt="logo" /></a>
                <a class="navbar-brand brand-logo-mini" href="~/Home/Index.cshtml"><img src="~/admin/images/logo-mini.svg" alt="logo" /></a>
            </div>
            <div class="navbar-menu-wrapper d-flex align-items-stretch">
                <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                    <span class="mdi mdi-menu"></span>
                </button>
                <div class="search-field d-none d-md-block">
                    <form class="d-flex align-items-center h-100" action="#">
                        <div class="input-group">
                            <div class="input-group-prepend bg-transparent">
                                <i class="input-group-text border-0 mdi mdi-magnify"></i>
                            </div>
                            <input type="text" class="form-control bg-transparent border-0" placeholder="Search projects">
                        </div>
                    </form>
                </div>
                <ul class="navbar-nav navbar-nav-right">
                    <li class="nav-item nav-profile dropdown">
                        <a class="nav-link dropdown-toggle" id="profileDropdown" href="#" data-toggle="dropdown" aria-expanded="false">
                            <div class="nav-profile-img">
                                <img src="~/admin/images/faces/face1.jpg" alt="image">
                                <span class="availability-status online"></span>
                            </div>
                            <div class="nav-profile-text">
                                <p class="font-weight-bold mb-2">İsim Soyisim (Yetki)</p>
                            </div>
                        </a>
                        <div class="dropdown-menu navbar-dropdown" aria-labelledby="profileDropdown">
                            <a class="dropdown-item" href="#">
                                <i class="mdi mdi-cached mr-2 text-success"></i> Aktivite Geçmişi
                            </a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">
                                <i class="mdi mdi-logout mr-2 text-primary"></i> Çıkış Yap
                            </a>
                        </div>
                    </li>
                    <!-- /Messages -->
                    <li class="nav-item dropdown">
                        <a class="nav-link count-indicator dropdown-toggle" id="messageDropdown" href="#" data-toggle="dropdown" aria-expanded="false">
                            <img src="~/images/envelope.svg" height="15px" />
                            <span class="count-symbol bg-warning"></span> <!-- Bildirim olup olmamasına göre sembolün varlığı ve yokluğu sorgulanacak. -->
                        </a>
                        <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="messageDropdown">
                            <h6 class="p-3 mb-0">Mesajlar</h6>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item preview-item">
                                <div class="preview-thumbnail">
                                    <img src="~/admin/images/faces/face4.jpg" alt="image" class="profile-pic">
                                </div>
                                <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                                    <h6 class="preview-subject ellipsis mb-1 font-weight-normal">... size mesaj gönderdi.</h6>
                                    <p class="text-gray mb-0"> ... dakika önce</p>
                                </div>
                            </a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item preview-item">
                                <div class="preview-thumbnail">
                                    <img src="~/admin/images/faces/face2.jpg" alt="image" class="profile-pic">
                                </div>
                                <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                                    <h6 class="preview-subject ellipsis mb-1 font-weight-normal">... size mesaj gönderdi.</h6>
                                    <p class="text-gray mb-0"> ... dakika önce</p>
                                </div>
                            </a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item preview-item">
                                <div class="preview-thumbnail">
                                    <img src="~/admin/images/faces/face3.jpg" alt="image" class="profile-pic">
                                </div>
                                <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                                    <h6 class="preview-subject ellipsis mb-1 font-weight-normal">Profil fotoğrafı güncellendi.</h6>
                                    <p class="text-gray mb-0"> ... dakika önce</p>
                                </div>
                            </a>
                            <div class="dropdown-divider"></div>
                            <h6 class="p-3 mb-0 text-center">... yeni mesajınız mevcut.</h6>
                        </div>
                    </li>
                    <!-- //Messages -->
                    <!-- /Notifications -->
                    <li class="nav-item dropdown">
                        <a class="nav-link count-indicator dropdown-toggle" id="notificationDropdown" href="#" data-toggle="dropdown">
                            <img src="~/images/bell.svg" height="15px" />
                            <span class="count-symbol bg-danger"></span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="notificationDropdown">
                            <h6 class="p-3 mb-0">Bildirimler</h6>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item preview-item">
                                <div>
                                    <div>
                                        <img src="~/images/calendar.svg" width="25px" />
                                    </div>
                                </div>
                                <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                                    <h6 class="preview-subject font-weight-normal mb-1">Bugünki etkinlikleriniz</h6>
                                    <p class="text-gray ellipsis mb-0">Bugün bir etkinliğiniz mevcut!</p>
                                    @*bu kısım veritabanından çekilerek işlem görecek şekilde düzenlenebilir.*@
                                </div>
                            </a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item preview-item">
                                <div>
                                    <div>
                                        <img src="~/images/gear.svg" width="25px" />
                                    </div>
                                </div>
                                <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                                    <h6 class="preview-subject font-weight-normal mb-1">Ayarlar</h6>
                                    <p class="text-gray ellipsis mb-0"> Kontrol panelini güncelle</p>
                                </div>
                            </a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item preview-item">
                                <div>
                                    <div>
                                        <img src="~/images/link.svg" width="25px" />
                                    </div>
                                </div>
                                <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                                    <h6 class="preview-subject font-weight-normal mb-1">Yönetici modunu başlat</h6>
                                    <p class="text-gray ellipsis mb-0">Vay canına yeni bir yönetici!</p>
                                </div>
                            </a>
                            <div class="dropdown-divider"></div>
                            <h6 class="p-3 mb-0 text-center">Bütün bildirimleri gör</h6>
                        </div>
                    </li>
                    <!-- //Notifications -->
                    <li class="nav-item nav-logout d-none d-lg-block">
                        <a class="nav-link" href="~/LogIn/LogOut">
                            <img src="~/images/power.svg" height="15px" />
                        </a>
                    </li>
                    <li class="nav-item nav-settings d-none d-lg-block">
                        <a class="nav-link" href="#">
                            <img src="~/images/line.svg" height="15px" />
                        </a>
                    </li>
                </ul>
                <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                    <span>
                        <img src="~/images/menu.svg" height="15px" />
                    </span>
                </button>
            </div>
        </nav>
        <!-- //Navbar -->
        <!-- /Main -->

        <div class="container-fluid page-body-wrapper">
            <!-- /Sidebar -->
            <nav class="sidebar sidebar-offcanvas" id="sidebar">
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link" href="~/User/Index">
                            <span class="menu-title">Yönetici Paneli</span>
                            <i class="menu-arrow"></i>
                            <img src="~/images/house.svg" width="15px" />
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="collapse" href="#ui-basic" aria-expanded="false" aria-controls="ui-basic">
                            <span class="menu-title">Basit Arayüz Elementleri</span>
                            <i class="menu-arrow"></i>
                            <img src="~/images/crosshair.svg" width="15px" />
                        </a>
                        <div class="collapse" id="ui-basic">
                            <ul class="nav flex-column sub-menu">
                                <li class="nav-item"> <a class="nav-link" href="pages/ui-features/buttons.html">Buttons</a></li>
                                <li class="nav-item"> <a class="nav-link" href="pages/ui-features/typography.html">Typography</a></li>
                            </ul>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <span class="menu-title">İkonlar</span>
                            <i class="menu-arrow"></i>
                            <img src="~/images/portrait.svg" width="15px" />
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <span class="menu-title">Forumlar</span>
                            <i class="menu-arrow"></i>
                            <img src="~/images/list.svg" width="15px" />
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <span class="menu-title">Grafikler</span>
                            <i class="menu-arrow"></i>
                            <img src="~/images/chart.svg" width="15px" />
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <span class="menu-title">Tablolar</span>
                            <i class="menu-arrow"></i>
                            <img src="~/images/table.svg" width="15px" />
                        </a>
                    </li>
