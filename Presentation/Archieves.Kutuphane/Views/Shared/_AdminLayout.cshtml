                    </li>
                </ul>
            </nav>
            <!-- //Sidebar -->
            @RenderBody()
        </div>
        <!-- //Main -->
        <!-- /Footer -->
        <footer class="footer">
            <div class="container-fluid clearfix">
                <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">© 2023 Kütüphane Uygulaması. Bütün Hakları Saklıdır. | headclef tarafından tasarlandı ve düzenlendi.</span>
