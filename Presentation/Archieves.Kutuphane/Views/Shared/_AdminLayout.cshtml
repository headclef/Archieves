@using System.Security.Claims;
@using Archieves.Persistence.Concretes;
@{
    Layout = null;
}
<!DOCTYPE html>

<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>Kütüphane Uygulaması Admin</title>
    <!-- /Stylesheets -->
    <link href="~/admin/css/style.css" rel="stylesheet" type="text/css" />
    <link href="~/admin/vendors/css/vendor.bundle.base.css" rel="stylesheet" type="text/css" />
    <link href="~/admin/vendors/mdi/css/materialdesignicons.min.css" rel="stylesheet" type="text/css" />
    <!-- //Stylesheets -->
</head>
<body>
    <div class="container-scroller">
        <!-- /Navbar -->
        <nav class="navbar default-layout-navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
            <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
                <a asp-controller="Home" asp-action="Index"><img src="~/images/archievesLogo.png" alt="logo" width="70px" /></a>
            </div>
            <div class="navbar-menu-wrapper d-flex align-items-stretch">
                <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                    <span class="mdi mdi-menu"></span>
                </button>
                <div class="search-field d-none d-md-block">
                    <form class="d-flex align-items-center h-100" action="#">
                        <div class="input-group">
                            <div class="input-group-prepend bg-transparent">
                                <i class="input-group-text border-0 mdi mdi-magnify"></i>
                            </div>
                            <input type="text" class="form-control bg-transparent border-0" placeholder="Search projects">
                        </div>
                    </form>
                </div>
                <ul class="navbar-nav navbar-nav-right">
                    <li class="nav-item nav-profile dropdown">
                        <a class="nav-link dropdown-toggle" id="profileDropdown" href="#" data-toggle="dropdown" aria-expanded="false">
                            <div class="nav-profile-img">
                                <img src="~/admin/images/faces/face1.jpg" alt="image">
                                <span class="availability-status online"></span>
                            </div>
                            <div class="nav-profile-text">
                                @{
                                    var userEmail = User.FindFirst(ClaimTypes.Email);
                                    UserService userService = new UserService();
                                    var user = userService.GetAll().Where(u => u.Email == userEmail.Value).FirstOrDefault();
                                }
                                <p class="font-weight-bold mb-2">
                                    @user.Name @user.Surname
                                </p>
                            </div>
                        </a>
                        <div class="dropdown-menu navbar-dropdown" aria-labelledby="profileDropdown">
                            <a class="dropdown-item" href="#">
                                <i class="mdi mdi-cached mr-2 text-success"></i> Aktivite Geçmişi
                            </a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" asp-controller="LogIn" asp-action="LogOut">
                                <i class="mdi mdi-logout mr-2 text-primary"></i> Çıkış Yap
                            </a>
                        </div>
                    </li>
                    <!-- /Messages -->
                    @await Component.InvokeAsync("AdminMessageNotification")
                    <!-- //Messages -->
                    <!-- /Notifications -->
                    @await Component.InvokeAsync("AdminNotification")
                    <!-- //Notifications -->
                    <li class="nav-item nav-logout d-none d-lg-block">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <img src="~/images/power.svg" height="15px" />
                        </a>
                    </li>
                    <li class="nav-item nav-settings d-none d-lg-block">
                        <a class="nav-link" href="#">
                            <img src="~/images/line.svg" height="15px" />
                        </a>
                    </li>
                </ul>
                <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                    <span>
                        <img src="~/images/menu.svg" height="15px" />
                    </span>
                </button>
            </div>
        </nav>
        <!-- //Navbar -->
        <!-- /Main -->
        <div class="container-fluid page-body-wrapper">
            <!-- /Sidebar -->
            <nav class="sidebar sidebar-offcanvas" id="sidebar">
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="User" asp-action="Index">
                            <span class="menu-title">Yönetici Paneli</span>
                            <i class="menu-arrow"></i>
                            <img src="~/images/house.svg" width="15px" />
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="User" asp-action="CommentsList">
                            <span class="menu-title">Yorumlar</span>
                            <i class="menu-arrow"></i>
                            <img src="~/images/comment.svg" width="15px" />
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="collapse" href="#ui-basic" aria-expanded="false" aria-controls="ui-basic">
                            <span class="menu-title">Basit Arayüz Elementleri</span>
                            <i class="menu-arrow"></i>
                            <img src="~/images/crosshair.svg" width="15px" />
                        </a>
                        <div class="collapse" id="ui-basic">
                            <ul class="nav flex-column sub-menu">
                                <li class="nav-item"> <a class="nav-link" href="#">Buttons</a></li> <!-- pages/ui-features/buttons.html -->
                                <li class="nav-item"> <a class="nav-link" href="#">Typography</a></li> <!-- pages/ui-features/typography.html -->
                            </ul>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <span class="menu-title">İkonlar</span>
                            <i class="menu-arrow"></i>
                            <img src="~/images/portrait.svg" width="15px" />
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <span class="menu-title">Forumlar</span>
                            <i class="menu-arrow"></i>
                            <img src="~/images/list.svg" width="15px" />
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <span class="menu-title">Grafikler</span>
                            <i class="menu-arrow"></i>
                            <img src="~/images/chart.svg" width="15px" />
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <span class="menu-title">Tablolar</span>
                            <i class="menu-arrow"></i>
                            <img src="~/images/table.svg" width="15px" />
                        </a>
                    </li>
                    @*
                    <li class="nav-item">
                    <a class="nav-link" data-toggle="collapse" href="#general-pages" aria-expanded="false" aria-controls="general-pages">
                    <span class="menu-title">Örnek Sayfalar</span>
                    <i class="menu-arrow"></i>
                    <img src="~/images/bag.svg" width="15px" />
                    </a>
                    <div class="collapse" id="general-pages">
                    <ul class="nav flex-column sub-menu">
                    <li class="nav-item"> <a class="nav-link" href="#"> Boş Sayfa </a></li> <!-- pages/samples/blank-page.html -->
                    <li class="nav-item"> <a class="nav-link" href="#"> Giriş Yap </a></li> <!-- pages/samples/login.html -->
                    <li class="nav-item"> <a class="nav-link" href="#"> Kayıt Ol </a></li> <!-- pages/samples/register.html -->
                    <li class="nav-item"> <a class="nav-link" href="#"> 404 </a></li> <!-- pages/samples/error-404.html -->
                    <li class="nav-item"> <a class="nav-link" href="#"> 500 </a></li> <!-- pages/samples/error-500.html -->
                    </ul>
                    </div>
                    </li>
                    *@
                    <li class="nav-item sidebar-actions">
                        <span class="nav-link">
                            <div class="border-bottom">
                                <h6 class="font-weight-normal mb-3">Projeler</h6>
                            </div>
                            <button class="btn btn-block btn-lg btn-gradient-primary mt-4">+ Proje ekle</button>
                            @*
                            <div class="mt-4">
                            <div class="border-bottom">
                            <p class="text-secondary">Kategoriler</p>
                            </div>
                            <ul class="gradient-bullet-list mt-4">
                            <li>Ücretsiz</li>
                            <li>Pro</li>
                            </ul>
                            </div>
                            *@
                        </span>
                    </li>
                </ul>
            </nav>
            <!-- //Sidebar -->
            @RenderBody()
        </div>
        <!-- //Main -->
        <!-- /Footer -->
        <footer class="footer">
            <div class="container-fluid clearfix">
                <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">© @DateTime.Now.Year Kütüphane Uygulaması. Bütün Hakları Saklıdır. | headclef tarafından tasarlandı ve düzenlendi.</span>
                <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center"> Bu kullanıcı paneli gibi ücretsiz paneller için <a href="https://www.bootstrapdash.com/bootstrap-admin-template/" target="_blank">buraya tıklayabilirsiniz.</a></span>
            </div>
        </footer>
        <!-- //Footer -->
    </div>
    <!-- /Scripts -->
    <script src="~/admin/vendors/js/vendor.bundle.base.js"></script>    @*Plugin*@
    <script src="~/admin/vendors/chart.js/Chart.min.js"></script>       @*Plugin*@
    <script src="~/admin/js/off-canvas.js"></script>                    @*Injection*@
    <script src="~/admin/js/hoverable-collapse.js"></script>            @*Injection*@
    <script src="~/admin/js/misc.js"></script>                          @*Injection*@
    <script src="~/admin/js/dashboard.js"></script>                     @*Custom*@
    <script src="~/admin/js/todolist.js"></script>                      @*Custom*@
    <!-- //Scripts -->
</body>
</html>