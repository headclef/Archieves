@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://www.google.com/recaptcha/api.js"></script>
<!--/main-->
<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Hemen Giriş Yap</h3>
        <div class="row inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                <form action="LogIn" method="post">
                    <div class="form-group">
                        <label for="exampleInputEmail1 mb-2">E - Posta Adresi</label>
                        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="" required="">
                        <small id="emailHelp" class="form-text text-muted">Bilgilerinizi kimseyle paylaşmayacağız.</small>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1 mb-2">Şifre</label>
                        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="" required="">
                    </div>
                    <div class="form-check mb-2">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">Bilgilerimi kaydet</label>
                    </div>
                    <div class="g-recaptcha" data-sitekey="6LdZ4gwoAAAAAGU-L1Z02jYNV-4pOvO41GT0f-z9"></div>
                    <br />
                    <button type="submit" class="btn btn-primary submit mb-4">Giriş Yap</button>
                    <p style="text-align:justify;"><a href="~/Register/Index">Hesabın yok mu?</a></p>
                </form>
            </div>
        </div>
    </div>
</section>
<!--//main-->