@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="main-content-w3layouts-agileits">

	<h3 class="tittle">BİZİMLE İLETİŞİME GEÇ</h3>
	<p class="sub text-center">SİZİNLE İLETİŞİME GEÇMEKTEN MUTLULUK DUYARIZ</p>
	<div class="contact-map inner-sec">
		<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3017.031020854131!2d29.266901176475745!3d40.871193427853974!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cadc847c03f8bf%3A0xc44ed650be8cb527!2zw4dhbcOnZcWfbWUsIEthdGlwIMOHZWxlYmkgQ2QsIDM0ODk5IFBlbmRpay_EsHN0YW5idWw!5e0!3m2!1str!2str!4v1694161542434!5m2!1str!2str" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade">
		</iframe>
	</div>
	<div class="ad-inf-sec bg-light">
		<div class="container">
			<div class="address row">

				<div class="col-lg-4 address-grid">
					<div class="row address-info">
						<div class="col-md-4 address-left text-center">
							<img src="~/images/map.svg" height="25px" />
						</div>
						<div class="col-md-8 address-right text-left">
							<h6>Adres</h6>
							<p>
								İstanbul, Türkiye
							</p>
						</div>
					</div>

				</div>
				<div class="col-lg-4 address-grid">
					<div class="row address-info">
						<div class="col-md-4 address-left text-center">
							<img src="~/images/envelope.svg" height="25px" />
						</div>
						<div class="col-md-8 address-right text-left">
							<h6>Email</h6>
							<p>
								<a href="mailto:furkanturalofficial@outlook.com"> furkanturalofficial@outlook.com</a>
							</p>
						</div>

					</div>
				</div>
				<div class="col-lg-4 address-grid">
					<div class="row address-info">
						<div class="col-md-4 address-left text-center">
							<img src="~/images/phone.svg" height="25px" />
						</div>
						<div class="col-md-8 address-right text-left">
							<h6>Telefon</h6>
							<p>+(90) 505 976 57 18</p>

						</div>

					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="container">
		<div class="contact_grid_right">
			<form action="#" method="post">
				<div class="row contact_left_grid">
					<div class="col-md-6 con-left">
						<div class="form-group">
							<label for="validationCustom01 my-2">İsim</label>
							<input class="form-control" type="text" name="Name" placeholder="" required="">
						</div>
						<div class="form-group">
							<label for="exampleFormControlInput1">Email</label>
							<input class="form-control" type="email" name="Email" placeholder="" required="">
						</div>
						<div class="form-group">
							<label for="validationCustom03 my-2">Konu</label>
							<input class="form-control" type="text" name="Subject" placeholder="" required="">
						</div>
					</div>
					<div class="col-md-6 con-right">
						<div class="form-group">
							<label for="textarea">Mesaj</label>
							<textarea id="textarea" placeholder=""></textarea>
						</div>
						<input class="form-control" type="submit" value="Gönder">

					</div>
				</div>
			</form>
		</div>
	</div>
</section>