@model IEnumerable<Archieves.Domain.Entities.Comment>
@{
    ViewData["Title"] = "CommentsList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div>
    <table class="table table-borderless">
        <thead>
            <tr>
                <div class="text-center">
                    <a asp-controller="Comment" asp-action="AddComment" class="btn btn-gradient-primary">+ Yorum Ekle</a>
                </div>
            </tr>
            <tr>
                <th>Yorum Numarası</th>
                <th>Yorum</th>
                <th>Yorum Yapılan Kitap Numarası</th>
                <th>Yorum Yapma Tarihi</th>
                <th>Yorumun Aktifliği</th>
                <th>Düzenle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ToList())
            {
                <tr>
                    <td>@item.Id</td>
                    <td>
                        @if (item.Content.Length > 50)
                        {
                            @item.Content.Substring(0, item.Content.Substring(0, 50).LastIndexOf(" "))
                        }
                        else
                        {
                            @item.Content
                        }
                        ...
                    </td>
                    <td>@item.BookId</td>
                    <td>@item.Date</td>
                    <td>@item.Status</td>
                    <td><a asp-controller="Comment" asp-action="UpdateComment" asp-route-id="@item.Id" class="btn btn-warning">Düzenle</a></td>
                    <td><a asp-controller="Comment" asp-action="DeleteComment" asp-route-id="@item.Id" class="btn btn-danger">Sil</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>