<div class="comment-top">
    <h4>Yorum Yap</h4>
    <div class="comment-bottom">
        @if (User.Identity.IsAuthenticated)
        {
            @using (Html.BeginForm("PartialAddComment", "Comment", FormMethod.Post, new { @class = "comment-form"}))
            {
                <input class="form-control" name="BookId" type="hidden" placeholder="Kitap ismi." value="@ViewBag.BookId">
                <textarea class="form-control" name="Content" placeholder="Yorum..." required="" style="color:black;"></textarea>
                <button type="submit" class="btn btn-primary submit">Submit</button>
            }
        }
    </div>
</div>
