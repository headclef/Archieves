@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--/main-->
<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Hemen Kayıt Ol</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                <form action="#" method="post">
                    <div class="form-row">
                        <!--/İsim-->
                        <div class="col-md-6 mb-3">
                            <label for="UserName">İsim</label>
                            <input type="text" class="form-control" id="name" placeholder="Buraya giriniz." required="">
                        </div>
                        <!--//İsim-->
                        <!--/Soyisim-->
                        <div class="col-md-6 mb-3">
                            <label for="UserSurname">Soyisim</label>
                            <input type="text" class="form-control" id="surname" placeholder="Buraya giriniz." required="">
                        </div>
                        <!--//Soyisim-->
                    </div>
                    <div class="form-row">
                        <!--/Email-->
                        <div class="form-group col-md-6">
                            <label for="UserEmail">E - Posta Adresi</label>
                            <input type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Buraya giriniz." required="">
                        </div>
                        <!--//Email-->
                        <!--/Kullanıcı Adı-->
                        <div class="form-group col-md-6">
                            <label for="UserUsername">Kullanıcı Adı</label>
                            <input type="text" class="form-control" id="username" aria-describedby="emailHelp" placeholder="Buraya giriniz." required="">
                        </div>
                        <!--//Kullanıcı Adı-->
                    </div>
                    <div class="form-row">
                        <!--/Şifre-->
                        <div class="form-group col-md-6">
                            <label for="UserPassword">Şifre</label>
                            <input type="password" class="form-control" id="password1" placeholder="Buraya giriniz." required="">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="UserPassword">Şifreyi Doğrula</label>
                            <input type="password" class="form-control" id="password2" placeholder="Buraya giriniz." required="">
                        </div>
                        <!--//Şifre-->
                    </div>
                    <div class="form-row">
                        <!--/Telefon Numarası-->
                        <div class="form-group col-md-6">
                            <label for="UserPhone">Telefon Numarası</label>
                            <input type="tel" class="form-control" id="phone" placeholder="234 567 89 01" required="" pattern="[0-9]{3} [0-9]{3} [0-9]{2} [0-9]{2}">
                        </div>
                        <!--//Telefon Numarası-->
                        <!--/Kullanıcı Fotoğrafı-->
                        <div class="form-group col-md-6">
                            <label for="UserImage">Kullanıcı Fotoğrafı</label>
                            <input type="file" class="form-control" id="image" placeholder="" required="">
                        </div>
                        <!--//Kullanıcı Fotoğrafı-->
                    </div>
                    <div class="form-row">
                        <!--/İş-->
                        <div class="form-group col-md-6">
                            <label for="UserJob">İş</label>
                            <input type="text" class="form-control" id="job" placeholder="Buraya giriniz." required="">
                        </div>
                        <!--//İş-->
                        <!--/Adres-->
                        <div class="form-group col-md-6">
                            <label for="UserAddress">Adres</label>
                            <input type="text" class="form-control" id="adres" placeholder="Buraya giriniz." required="">
                        </div>
                        <!--//Adres-->
                    </div>
                    <div class="form-row">
                        <!--/İş-->
                        <div class="form-group col-md-6">
                            <label for="UserBirthDate">Doğum Tarihi</label>
                            <input type="date" class="form-control" id="birthDate" placeholder="Buraya giriniz." required="">
                        </div>
                        <!--//İş-->
                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Kayıt Ol</button>
                    <p>
                        <a href="#">Kayıt ol butonuna tıklayarak e - kütüphane koşullarını kabul etmiş olursunuz.</a>
                    </p>
                </form>
            </div>
        </div>
    </div>
</section>
<!--//main-->