@using Archieves.Kutuphane.Models.User;
@model UserViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://unpkg.com/sweetalert@2.1.2/dist/sweetalert.min.js"></script>
<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Hemen Kayıt Ol</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                @using (Html.BeginForm("IndexRegister", "Archieves", FormMethod.Post))
                {
                    <div class="form-group" align="center">
                        <!--/İsim-->
                        <div class="col-md-6 mb-3 text-center">
                            <label for="Name">İsim</label>
                            <input type="text" class="form-control" id="name" name="Name" placeholder="Buraya giriniz.">
                            <p style="color:red;">@Html.ValidationMessageFor(x => x.Name)</p>
                        </div>
                        <!--//İsim-->
                    </div>
                    <div class="form-group" align="center">
                        <!--/Soyisim-->
                        <div class="col-md-6 mb-3 text-center">
                            <label for="Surname">Soyisim</label>
                            <input type="text" class="form-control" id="surname" name="Surname" placeholder="Buraya giriniz.">
                            <p style="color:red;">@Html.ValidationMessageFor(x => x.Surname)</p>
                        </div>
                        <!--//Soyisim-->
                    </div>
                    <div class="form-group" align="center">
                        <!--/Şifre-->
                        <div class="col-md-6 text-center">
                            <label for="Password1">Şifre</label>
                            <input type="password" class="form-control" id="password1" name="Password" placeholder="Buraya giriniz.">
                            <p style="color:red;">@Html.ValidationMessageFor(x => x.Password)</p>
                        </div>
                        <!--//Şifre-->
                    </div>
                    <div class="form-group" align="center">
                        <!--/Doğum Tarihi-->
                        <div class="col-md-6 text-center">
                            <label for="Date">Doğum Tarihi</label>
                            <input type="date" class="form-control" id="birthDate" name="Date" placeholder="Buraya giriniz.">
                            <p style="color:red;">@Html.ValidationMessageFor(x => x.Date)</p>
                        </div>
                        <!--//Doğum Tarihi-->
                    </div>
                    <div class="form-group" align="center">
                        <!--/Telefon Numarası-->
                        <div class="col-md-6 text-center">
                            <label for="Phone">Telefon Numarası</label>
                            <input type="tel" class="form-control" id="phone" name="Phone" placeholder="Buraya giriniz.">
                            <p style="color:red;">@Html.ValidationMessageFor(x => x.Phone)</p>
                        </div>
                        <!--//Telefon Numarası-->
                    </div>
                    <div class="form-group" align="center">
                        <!--/Email-->
                        <div class="col-md-6 text-center">
                            <label for="Email">E - Posta Adresi</label>
                            <input type="email" class="form-control" id="email" name="Email" aria-describedby="emailHelp" placeholder="Buraya giriniz.">
                            <p style="color:red;">@Html.ValidationMessageFor(x => x.Email)</p>
                            <p style="color:red;">@ViewBag.Message</p>
                        </div>
                        <!--//Email-->
                    </div>
                    <div class="form-group" align="center">
                        <!--/Adres-->
                        <div class="col-md-6 text-center">
                            <label for="Address">Adres</label>
                            <input type="text" class="form-control" id="adres" name="Address" placeholder="Buraya giriniz.">
                            <p style="color:red;">@Html.ValidationMessageFor(x => x.Address)</p>
                        </div>
                        <!--//Adres-->
                    </div>
                    <div align="center">
                        <button type="submit" onclick="warning" class="btn btn-primary submit mb-4">Kayıt Ol</button>
                        <p style="text-align:justify;">
                            <a href="#">Kayıt ol butonuna tıklayarak ya da öncesinde ilgili belgeyi inceleyip, onay vererek e - kütüphane kullanım koşullarını kabul etmiş olursunuz.</a>
                        </p>
                    </div>
                }
            </div>
        </div>
    </div>
    <script>
        function warning() {
            swal({
                title: "DİKKAT",
                text: "Kayıt olarak e - kütüphane kullanım koşullarını kabul ediyorsunuz. Bilgilerinizi kimse ile paylaşmayacağımızı bilmenizi ister ve iyi okumalar dileriz.",
                confirmButtonText: "Onayla",
                confirmButtonColor: "#DD6B55",
                type: "warning"
            });
        }
    </script>
</section>